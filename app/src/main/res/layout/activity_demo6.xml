    <data>
        <variable
            name="viewModel"
            type="com.ubitar.app.demo6.vm.Demo6ViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
