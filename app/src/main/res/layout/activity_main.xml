<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ubitar.app.launcher.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/viewStatusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="请选择Demo"
            android:textColor="#666666"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入Demo1(MVVM基础功能)"
            android:textAllCaps="false"
            android:onClick="@{viewModel.onClickBtn1}" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入Demo2(Dialog)"
            android:textAllCaps="false"
            android:onClick="@{viewModel.onClickBtn2}" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入Demo3(RecyclerView)"
            android:textAllCaps="false"
            android:onClick="@{viewModel.onClickBtn3}" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入Demo4(网络请求)"
            android:textAllCaps="false"
            android:onClick="@{viewModel.onClickBtn4}" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入Demo5(fragmentation)"
            android:textAllCaps="false"
            android:onClick="@{viewModel.onClickBtn5}" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入Demo6(Xpopup and viewModel)"
            android:textAllCaps="false"
            android:onClick="@{viewModel.onClickBtn6}" />

    </LinearLayout>
</layout>